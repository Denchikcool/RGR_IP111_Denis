<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:РГР.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="300" Height="300"
        x:Class="РГР.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="РГР">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

  <Grid ColumnDefinitions="100, 100, 100" RowDefinitions="270, 30">
    <Button Content="New file" Grid.Column="0" Grid.Row="1" Width="100" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="Create_Programm"/>
    <Button Content="Load file" Grid.Column="1" Grid.Row="1" Width="100" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    <Button Content="Exit" Grid.Column="2" Grid.Row="1" Width="100" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Click="Exit_programm"/>
  </Grid>

</Window>
